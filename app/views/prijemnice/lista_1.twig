{% extends "templates/app.twig" %}
{% block full %}
<div class="row mt-3 align-items-end">
    <div class="col-4">
        <h1>
            Пријемнице
            {% if magacini %}
            по <span class="text-success">магацину</span>
            {% endif %}
            {% if dobavljaci %}
            по <span class="text-success">добављачу</span>
            {% endif %}
        </h1>
    </div>
    <div class="col-4">
        {% if magacini %}
        <select name="id_magacina" id="id_magacina" class="form-select form-select-lg text-primary">
            <option value="0">...</option>
            {% for mag in magacini %}
            <option value="{{ mag.id }}"{{ magacin.id==mag.id ? ' selected' : '' }}>
                {{ mag.naziv }} [{{ mag.tip.naziv }}]
            </option>
            {% endfor %}
        </select>
        {% endif %}
        {% if dobavljaci %}
        <select name="id_dobavljaca" id="id_dobavljaca" class="form-select form-select-lg text-primary">
            <option value="0">...</option>
            {% for dob in dobavljaci %}
            <option value="{{ dob.id }}"{{ dobavljac.id==dob.id ? ' selected' : '' }}>
                {{ dob.naziv }}
            </option>
            {% endfor %}
        </select>
        {% endif %}
    </div>
    <div class="col-4 text-end mt-3">
        <div class="input-group">
            <span class="input-group-text bg-primary text-white border-primary"><i class="bi-search"></i></span>
            <input type="search" class="form-control border-primary" id="searchbox" name="searchbox" autofocus>
            <button class="btn btn-primary" type="button" id="ponisti-pretragu">
                <i class="bi-x-square"></i> Поништи
            </button>
        </div>
    </div>
</div>
<hr>

<table class="table table-striped table-hover table-sm">
    <thead class="table-dark">
        <tr>
            <th class="w-5">#</th>
            <th class="w-20">Магацин</th>
            <th class="w-10">Датум</th>
            <th class="w-15">Број</th>
            <th class="w-20">Добављач</th>
            <th class="w-20">Напомена</th>
            <th class="w-10 text-end"><i class="bi-gear"></i> Акције</th>
        </tr>
    </thead>
    <tbody>
        {% for pr in prijemnice %}
        <tr class="pretraga">
            <td class="text-danger">{{ pr.id }}</td>
            <td>{{ pr.magacin().naziv }}</td>
            <td>{{ pr.datum|date('d.m.Y') }}</td>
            <td>{{ pr.broj }}</td>
            <td>{{ pr.dobavljac().naziv }}</td>
            <td>{{ pr.napomena|nl2br }}</td>
            <td class="text-end">
                <div class="btn-group btn-group-sm">
                    <a class="btn btn-success" href="{{ url_for('prijemnica.pregled.no', { id: pr.id }) }}"
                        title="Преглед пријемнице"><i class="bi-eye"></i></a>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{# Modal za brisanje #}
<div id="brisanjeModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-danger">Упозорење!</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Затвори"></button>
            </div>
            <div class="modal-body">
                <h4>Да ли желите трајно да обришете артикал?</h4>
                <p class="text-danger lead">* Ова акција је неповратна!</p>
                <form id="brisanje-forma" action="{{ url_for('prijemnica.brisanje') }}" method="POST">
                    {{ csrf|raw }}
                    <input type="hidden" id="idBrisanje" name="idBrisanje" value="">
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button id="btn-brisanje-obrisi" type="submit" class="btn btn-danger">Обриши
                    </button>
                    <a class="btn btn-secondary" data-bs-dismiss="modal">Откажи
                    </a>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
{# Kraj modala za brisanje #}

{% endblock full %}

{% block skripta %}
{% if magacini %}
<script>
    document.getElementById('id_magacina').onchange = function () {
        let url = "{{ url_for('prijemnica.magacin', { id: 0 }) }}";
        url = url.replace("0", this.value);
        window.location.href = url;
    }
</script>
{% endif %}
{% if dobavljaci %}
<script>
    document.getElementById('id_dobavljaca').onchange = function () {
        let url = "{{ url_for('prijemnica.dobavljac', { id: 0 }) }}";
        url = url.replace("0", this.value);
        window.location.href = url;
    }
</script>
{% endif %}
{% endblock skripta %}