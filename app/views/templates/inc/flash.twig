{% if flash('info') %}
<div class="alert alert-primary alert-dismissible fade show p-1" role="alert">
	{% for msg in flash('info') %}
	{{ msg }}
	{% endfor %}
	<button type="button" class="btn-close p-2" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endif %}

