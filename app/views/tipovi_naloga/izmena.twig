{% extends "templates/app.twig" %}
{% block full %}
<h1>Типови налога</h1>
<hr>
<div class="card border-dark">
    <h5 class="card-header">Измена типа налога</h5>
    <div class="card-body">
        <form action="{{ url_for('tip.naloga.izmena') }}" method="POST">
            {{ csrf|raw }}
            <input type="hidden" id="id" name="id" value="{{ tip.id }}">
            <div class="row mt-3">
                <div class="col-md-4">
                    <label for="naziv">Назив</label>
                    <input type="text" class="form-control{{ errors.naziv ? ' is-invalid' : '' }}" name="naziv" id="naziv" value="{{ old.naziv ? : tip.naziv }}" maxlength="100" oninvalid="this.setCustomValidity('Назив је обавезан и мора да садржи највише 100 карактера.')" oninput="this.setCustomValidity('')" autocomplete="off" required>
                    <div class="invalid-feedback">{{ errors.naziv.0 }}</div>
                </div>
                <div class="col-md-5">
                    <label for="opis">Опис</label>
                    <input type="text" class="form-control{{ errors.opis ? ' is-invalid' : '' }}" name="opis" id="opis" value="{{ old.opis ? : tip.opis }}" maxlength="250" oninvalid="this.setCustomValidity('Опис мора да садржи највише 255 карактера.')" oninput="this.setCustomValidity('')" autocomplete="off">
                    <div class="invalid-feedback">{{ errors.opis.0 }}</div>
                </div>
                <div class="form-check col-md-3 mt-4">
                    <input type="checkbox" name="vise_artikala" id="vise_artikala" class="form-check-input{{ errors.vise_artikala ? ' is-invalid' : '' }}" value="" {{ tip.vise_artikala == 0 ? "" :'checked="checked"'}}>
                    <label for="vise_artikala">Више артикала</label>
                </div>
            </div>
            <div class="text-end mt-3">
                <div class="col">
                    <button type="submit" class="btn btn-primary"><i class="bi-plus-square"></i> Измени</button>
                    <a href="{{ url_for('tip.naloga.lista') }}" class="btn btn-secondary"><i class="bi-x-square"></i>
                        Откажи</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock full %}